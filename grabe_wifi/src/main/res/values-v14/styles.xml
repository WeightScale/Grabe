<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleTextStyle" >
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearanceWindowTitle</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowRadius">2.75</item>
        <item name="android:paddingTop">@dimen/stroke</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/TextAppearanceWindowTitle</item>
        <item name="android:windowTitleSize">@dimen/title_size</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textSize">@dimen/text_small</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextAppearanceWindowTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpanTextKg" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large_xx</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>